@model Cyber360.Models.CatProduct

@{
    ViewData["Title"] = "Detalles de Categoría";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --cyber-blue: #0066cc;
        --cyber-dark: #111;
        --cyber-gray: #333;
        --cyber-light: #ddd;
        --cyber-accent: #ff6600;
        --cyber-green: #00cc66;
        --cr-screen: #c0ffc0;
    }

    .cyber-container {
        max-width: 800px;
        margin: 20px auto;
        border: 3px solid var(--cyber-blue);
        padding: 30px;
        background-color: var(--cyber-dark);
        box-shadow: 0 0 20px rgba(0, 102, 204, 0.5);
    }

    .cyber-header {
        color: var(--cyber-accent);
        border-bottom: 2px dashed var(--cyber-blue);
        padding-bottom: 10px;
        margin-bottom: 25px;
        font-size: 1.8rem;
        text-transform: uppercase;
        text-align: center;
    }

    .cyber-details {
        margin: 25px 0;
    }

    .cyber-dt {
        color: var(--cyber-blue);
        padding: 10px 0;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .cyber-dd {
        color: var(--cyber-light);
        padding: 10px 0;
        border-bottom: 1px dotted var(--cyber-gray);
        font-family: 'Courier New', monospace;
        font-size: 1.1rem;
    }

    .cyber-btn {
        display: inline-block;
        padding: 12px 24px;
        margin: 15px 10px 15px 0;
        border: none;
        font-family: 'Courier New', monospace;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        text-transform: uppercase;
    }

    .cyber-btn-primary {
        background-color: var(--cyber-blue);
        color: white;
    }

        .cyber-btn-primary:hover {
            background-color: #004080;
            box-shadow: 0 0 15px var(--cyber-blue);
        }

    .cyber-btn-secondary {
        background-color: var(--cyber-gray);
        color: var(--cyber-light);
        border: 1px solid var(--cyber-blue);
    }

        .cyber-btn-secondary:hover {
            background-color: var(--cyber-dark);
            box-shadow: 0 0 10px var(--cyber-blue);
        }

    .cyber-hr {
        border: 0;
        height: 1px;
        background-image: linear-gradient(to right, transparent, var(--cyber-blue), transparent);
        margin: 25px 0;
    }

    .cyber-id-badge {
        display: inline-block;
        padding: 8px 15px;
        background-color: var(--cyber-gray);
        color: var(--cyber-accent);
        font-family: 'Courier New', monospace;
        border: 1px solid var(--cyber-blue);
        margin-top: 20px;
        float: right;
    }

    .cyber-product-count {
        color: var(--cyber-green);
        font-weight: bold;
        margin-left: 5px;
    }
</style>

<div class="cyber-container">
    <div class="cyber-header">
        <i class="fas fa-box-open"></i> DETALLES DE CATEGORÍA
    </div>

    <div class="cyber-details">
        <dl class="row">
            <dt class="cyber-dt col-sm-3">
                @Html.DisplayNameFor(model => model.Nombre):
            </dt>
            <dd class="cyber-dd col-sm-9">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
        </dl>
    </div>

    <div class="cyber-hr"></div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="cyber-btn cyber-btn-primary">
            <i class="fas fa-edit"></i> EDITAR CATEGORÍA
        </a>
        <a asp-action="Index" class="cyber-btn cyber-btn-secondary">
            <i class="fas fa-arrow-left"></i> REGRESAR
        </a>
    </div>

    <div class="cyber-id-badge">
        <i class="fas fa-hashtag"></i> ID: @Model?.Id
        <span class="cyber-product-count">
            <i class="fas fa-boxes"></i> @(Model?.Productos?.Count ?? 0) productos
        </span>
    </div>
</div>

@section Scripts {
    <!-- Font Awesome para íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Efecto de parpadeo en el encabezado
            const header = document.querySelector('.cyber-header');
            let intensity = 1;
            setInterval(() => {
                intensity = intensity === 1 ? 0.8 : 1;
                header.style.textShadow = `0 0 ${8*intensity}px var(--cyber-accent)`;
            }, 1000);

            // Efecto en el badge de ID
            const badge = document.querySelector('.cyber-id-badge');
            if (badge) {
                badge.addEventListener('mouseover', function() {
                    this.style.boxShadow = '0 0 10px var(--cyber-blue)';
                });
                badge.addEventListener('mouseout', function() {
                    this.style.boxShadow = 'none';
                });
            }
        });
    </script>
}