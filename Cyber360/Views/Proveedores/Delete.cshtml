@model Cyber360.Models.Proveedore

@{
    ViewData["Title"] = "Eliminar Proveedor - CyberCafé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --cyber-blue: #0066cc;
        --cyber-dark: #111;
        --cyber-gray: #333;
        --cyber-light: #ddd;
        --cyber-accent: #ff6600;
        --cyber-danger: #ff3333;
        --cr-screen: #c0ffc0;
    }

    body {
        background-color: var(--cyber-dark);
        color: var(--cyber-light);
        font-family: 'Courier New', monospace;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100" opacity="0.03"><rect width="100" height="100" fill="%230066cc"/></svg>');
        margin: 0;
        padding: 20px;
    }

    .cyber-container {
        max-width: 800px;
        margin: 0 auto;
        border: 3px solid var(--cyber-danger);
        padding: 20px;
        background-color: var(--cyber-gray);
        box-shadow: 0 0 20px rgba(255, 51, 51, 0.5);
        animation: pulse-border 2s infinite;
    }

    .cyber-header {
        color: var(--cyber-danger);
        border-bottom: 2px dashed var(--cyber-danger);
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-size: 1.8rem;
        text-transform: uppercase;
    }

    .cyber-details {
        display: grid;
        grid-template-columns: max-content 1fr;
        gap: 15px;
        margin: 20px 0;
    }

    .detail-label {
        color: var(--cyber-accent);
        font-weight: bold;
        text-align: right;
    }

    .detail-value {
        color: var(--cr-screen);
        padding: 5px 0;
        border-bottom: 1px dotted var(--cyber-blue);
    }

    .cyber-btn {
        display: inline-block;
        padding: 12px 24px;
        margin: 10px 5px;
        border: none;
        font-family: 'Courier New', monospace;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        font-size: 1.1rem;
    }

    .cyber-btn-danger {
        background-color: var(--cyber-danger);
        color: white;
    }

        .cyber-btn-danger:hover {
            background-color: #cc0000;
            box-shadow: 0 0 15px var(--cyber-danger);
            transform: translateY(-2px);
        }

    .cyber-btn-outline {
        background-color: transparent;
        color: var(--cyber-blue);
        border: 1px solid var(--cyber-blue);
    }

        .cyber-btn-outline:hover {
            background-color: rgba(0, 102, 204, 0.2);
            box-shadow: 0 0 10px var(--cyber-blue);
        }

    .cr-effect {
        color: var(--cr-screen);
        text-shadow: 0 0 5px var(--cr-screen);
    }

    .pixel-border {
        border: 2px solid var(--cyber-danger);
        position: relative;
    }

        .pixel-border:before {
            content: "";
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            border: 1px solid var(--cyber-accent);
            pointer-events: none;
        }

    .status-light {
        display: inline-block;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        margin-right: 8px;
    }

    .status-alert {
        background-color: var(--cyber-danger);
        box-shadow: 0 0 5px var(--cyber-danger);
        animation: blink 1s infinite;
    }

    .cyber-footer {
        margin-top: 30px;
        padding-top: 15px;
        border-top: 1px dashed var(--cyber-danger);
        color: var(--cyber-accent);
        font-size: 0.9rem;
    }

    .warning-message {
        color: var(--cyber-danger);
        font-size: 1.2rem;
        margin: 20px 0;
        text-align: center;
        text-transform: uppercase;
        animation: blink-text 1.5s infinite;
    }

    .id-display {
        background-color: var(--cyber-dark);
        color: var(--cyber-danger);
        padding: 10px;
        border: 1px dashed var(--cyber-danger);
        margin-bottom: 20px;
        font-family: 'Courier New', monospace;
        text-align: center;
    }

    @@keyframes pulse-border {
        0% {
            box-shadow: 0 0 10px rgba(255, 51, 51, 0.5);
        }

        50% {
            box-shadow: 0 0 20px rgba(255, 51, 51, 0.8);
        }

        100% {
            box-shadow: 0 0 10px rgba(255, 51, 51, 0.5);
        }
    }

    @@keyframes blink {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
        }
    }

    @@keyframes blink-text {
        0% {
            opacity: 1;
            text-shadow: 0 0 5px var(--cyber-danger);
        }

        50% {
            opacity: 0.7;
            text-shadow: 0 0 10px var(--cyber-danger);
        }

        100% {
            opacity: 1;
            text-shadow: 0 0 5px var(--cyber-danger);
        }
    }
</style>


@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (TempData["ErrorMessage"] != null)
