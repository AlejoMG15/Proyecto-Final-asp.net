@using CyberSD.Models
@model RoleDetailsViewModel

<style>
    .cyber-role-details-container {
        background-color: rgba(10, 10, 26, 0.8);
        border: 1px solid var(--cyber-primary);
        box-shadow: 0 0 20px rgba(0, 240, 255, 0.3);
        margin-top: 20px;
    }

    .cyber-role-header {
        background-color: rgba(0, 240, 255, 0.2);
        border-bottom: 2px solid var(--cyber-primary);
        color: var(--cyber-primary);
        padding: 15px 20px;
        text-transform: uppercase;
        font-weight: bold;
        letter-spacing: 1px;
        position: relative;
    }

        .cyber-role-header:after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, var(--cyber-primary), var(--cyber-secondary), var(--cyber-primary));
            opacity: 0.5;
        }

    .cyber-role-body {
        padding: 20px;
    }

    .cyber-role-title {
        color: var(--cyber-accent);
        border-bottom: 1px dashed var(--cyber-primary);
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-size: 1.2rem;
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: var(--cyber-text);
        margin-bottom: 20px;
    }

        .cyber-table th {
            background-color: rgba(0, 240, 255, 0.1);
            color: var(--cyber-primary);
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid var(--cyber-primary);
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .cyber-table td {
            padding: 12px;
            border-bottom: 1px solid rgba(0, 240, 255, 0.1);
        }

        .cyber-table tr:hover td {
            background-color: rgba(0, 240, 255, 0.05);
            color: var(--cyber-accent);
        }

    .cyber-alert {
        background-color: rgba(255, 170, 0, 0.1);
        border-left: 4px solid var(--cyber-warning);
        color: var(--cyber-warning);
        padding: 15px;
        margin-bottom: 20px;
    }

    .btn-cyber {
        border-radius: 0;
        border: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
        padding: 10px 20px;
    }

    .btn-cyber-secondary {
        background-color: transparent;
        color: var(--cyber-text-secondary);
        border: 1px solid var(--cyber-text-secondary);
    }

        .btn-cyber-secondary:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--cyber-primary);
            border-color: var(--cyber-primary);
            box-shadow: 0 0 10px rgba(0, 240, 255, 0.3);
        }

    .index-number {
        color: var(--cyber-primary);
        font-weight: bold;
    }

    .user-email {
        font-family: 'Courier New', monospace;
    }
</style>

<div class="cyber-role-details-container">
    <div class="cyber-role-header">
        <h3 class="mb-0">
            <i class="fas fa-id-card"></i> DETALLES DEL ROL: <span class="text-uppercase">@Model.RoleName</span>
        </h3>
    </div>

    <div class="cyber-role-body">
        <h5 class="cyber-role-title">
            <i class="fas fa-users"></i> USUARIOS ASIGNADOS
        </h5>

        @if (Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="cyber-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>EMAIL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Users.Count; i++)
                        {
                            <tr>
                                <td class="index-number">@(i + 1)</td>
                                <td class="user-email">@Model.Users[i]</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="cyber-alert">
                <i class="fas fa-exclamation-triangle"></i> No hay usuarios asignados a este rol.
            </div>
        }

        <div class="mt-4">
            <a asp-action="Index" class="btn-cyber btn-cyber-secondary">
                <i class="fas fa-arrow-left"></i> VOLVER A LA LISTA
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Efecto hover para filas de la tabla
        document.querySelectorAll('.cyber-table tr').forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.transform = 'translateX(5px)';
            });
            row.addEventListener('mouseleave', function() {
                this.style.transform = 'translateX(0)';
            });
        });

        // Efecto hover para botón
        document.querySelector('.btn-cyber').addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-3px)';
        });
        document.querySelector('.btn-cyber').addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    </script>
}