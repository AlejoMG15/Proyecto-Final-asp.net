@model IEnumerable<CyberSD.Models.Equipo>

@{
    ViewData["Title"] = "Gestión de Equipos - CyberCafé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .cyber-equipos-container {
        background-color: rgba(10, 10, 26, 0.8);
        border: 1px solid var(--cyber-primary);
        box-shadow: 0 0 20px rgba(0, 240, 255, 0.3);
        padding: 25px;
        margin-top: 20px;
    }

    .cyber-equipos-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        border-bottom: 2px solid var(--cyber-primary);
        padding-bottom: 15px;
    }

    .cyber-equipos-title {
        color: var(--cyber-primary);
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 1.8rem;
        margin: 0;
    }

    .cyber-table {
        width: 100%;
        border-collapse: collapse;
        color: var(--cyber-text);
    }

        .cyber-table th {
            background-color: rgba(0, 240, 255, 0.1);
            color: var(--cyber-primary);
            padding: 15px;
            text-align: left;
            border-bottom: 2px solid var(--cyber-primary);
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .cyber-table td {
            padding: 15px;
            border-bottom: 1px solid rgba(0, 240, 255, 0.1);
        }

        .cyber-table tr:hover td {
            background-color: rgba(0, 240, 255, 0.05);
            color: var(--cyber-accent);
        }

    .btn-cyber {
        border-radius: 0;
        border: none;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s;
        padding: 10px 20px;
        font-size: 0.8rem;
        text-decoration: none;
    }

    .btn-cyber-primary {
        background-color: var(--cyber-primary);
        color: var(--cyber-dark);
    }

        .btn-cyber-primary:hover {
            background-color: var(--cyber-primary);
            box-shadow: 0 0 15px var(--cyber-primary);
            transform: translateY(-2px);
        }

    .btn-cyber-action {
        background-color: transparent;
        color: var(--cyber-text-secondary);
        border: 1px solid var(--cyber-text-secondary);
        padding: 5px 10px;
        margin: 0 5px;
    }

        .btn-cyber-action:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: var(--cyber-primary);
            border-color: var(--cyber-primary);
        }

    .btn-cyber-edit {
        color: var(--cyber-warning);
        border-color: var(--cyber-warning);
    }

    .btn-cyber-details {
        color: var(--cyber-accent);
        border-color: var(--cyber-accent);
    }

    .btn-cyber-delete {
        color: var(--cyber-danger);
        border-color: var(--cyber-danger);
    }

        .btn-cyber-delete:hover {
            animation: pulse 0.5s infinite alternate;
        }

    .equipo-name {
        font-weight: bold;
        color: var(--cyber-text);
        letter-spacing: 1px;
        font-family: 'Courier New', monospace;
    }

    .no-equipos {
        color: var(--cyber-text-secondary);
        text-align: center;
        padding: 30px;
        font-style: italic;
    }

    .action-cell {
        display: flex;
        justify-content: flex-end;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        100% {
            transform: scale(1.05);
        }
    }
</style>

<div class="cyber-equipos-container">
    <div class="cyber-equipos-header">
        <h1 class="cyber-equipos-title">
            <i class="fas fa-desktop"></i> GESTIÓN DE EQUIPOS
        </h1>
        <a asp-action="Create" class="btn-cyber btn-cyber-primary">
            <i class="fas fa-plus"></i> NUEVO EQUIPO
        </a>
    </div>

    @if (Model.Any())
    {
        <table class="cyber-table">
            <thead>
                <tr>
                    <th>NOMBRE DEL EQUIPO</th>
                    <th class="text-end">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="equipo-name">@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td class="action-cell">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn-cyber btn-cyber-action btn-cyber-edit"
                               title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id"
                               class="btn-cyber btn-cyber-action btn-cyber-details"
                               title="Detalles">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn-cyber btn-cyber-action btn-cyber-delete"
                               title="Eliminar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="no-equipos">
            <i class="fas fa-desktop fa-3x mb-3"></i>
            <h4>NO HAY EQUIPOS REGISTRADOS</h4>
            <p>Comienza agregando un nuevo equipo al sistema</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Efecto hover para botones de acción
        document.querySelectorAll('.btn-cyber-action').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
            });
            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Efecto hover para filas de la tabla
        document.querySelectorAll('.cyber-table tbody tr').forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.boxShadow = 'inset 0 0 10px rgba(0, 240, 255, 0.2)';
            });
            row.addEventListener('mouseleave', function() {
                this.style.boxShadow = 'none';
            });
        });
    </script>
}